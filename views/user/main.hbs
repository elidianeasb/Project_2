<hr>


{{!-- <p>Option 1</p> --}}
<div class="search-bar">
    <form action="/joblist" class="input-group input-group-lg" method="GET">
        <input type="text" class="form-login" style="width:250px;" name="filter" placeholder="Title, Company, Status..">
        <button type="submit" class="btn-main" style="width:60px; height: 35px;">Search</button>
    </form>
</div>

<hr>


<div class="container align-cards">
    <div class="row">
        {{#each jobs}}
        <div class="card" style="width: 22rem; background-color: rgb(253, 253, 253)">
            <div class="card-body">
                <div class="col ">
                    <p class="joblistHeader">Title:</p>
                    <p class="joblistContent">{{title}}</p>
                </div>
                <div class="col">
                    <p class="joblistHeader">Company:</p>
                    <p class="joblistContent">{{company}}</p>
                </div>
                <div class="col">
                    <p class="joblistHeader">Status:</p>
                    <p class="joblistContent">{{status}}</p>
                </div>
                <div class="col">
                    <div class="card-bottom">
                        <a href="/details/{{_id}}"><span>More</span></a>
                        <form action="/delete/{{_id}}" method="post">
                            <button class="btn-delete" type="submit"><span class="bi-trash"></span></button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
<p class="text-center"><a class="btn-main" style="width:150px;" href="/create">Create new Job</a></p>


               


















