<h2 class="text-center">Application Tracker 💼</h2>

<hr>

<p>Option 1</p>
<div>
    <form action="/joblist" class="input-group input-group-lg" method="GET">
        <input type="text" class="" name="filter" placeholder="Search for Company..">
        <button type="submit" class="btn btn-outline-secondary">Find !</button>
    </form>
</div>

<p>Option 2</p>
<div class="input-group input-group-lg">
    <form action="/joblist" method="GET" id="omega">
        <input type="text" class="form-control" name="filter" placeholder="Search for Company.." aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg">
        <button type="submit" class="btn btn-outline-primary">Find !</button>
    </form>
</div>

<p>Option 2B</p>

    <form action="/joblist" method="GET" id="">
        <div style="flex-wrap: nowrap" class="input-group input-group-lg"></div>
            <input type="text" class="form-control" style="width: 80%; display: inline-block" name="filter" placeholder="Search for Company.." aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg">
            <button type="submit" class="btn btn-outline-primary">Find !</button>
        </div>
    </form>


<p>Option 3</p>
<div class="input-group input-group-lg">
    <input type="text" class="form-control" name="filter" placeholder="Search for Company.." aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg">
    <button type="submit" form="omega" class="btn btn-outline-primary">Find !</button>
</div>

<p>Option 4</p>
<div class="input-group input-group-lg">
    <input type="text" class="form-control" name="filter" placeholder="Search for Company.." aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg">
    <button type="submit" formaction="/joblist" formmethod="GET" class="btn btn-outline-primary">Find !</button>
</div>

<hr>

{{#each jobs}}

<div class="row align-items-start">
    <div class="col">
        <p class="joblistHeader">Title</p>
        <p class="joblistContent">{{title}}</p>
    </div>
    <div class="col">
        <p class="joblistHeader">Company</p>
        <p class="joblistContent">{{company}}</p>
    </div>
    <div class="col">
        <p class="joblistHeader">Status</p>
        <p class="joblistContent">{{status}}</p>
    </div>
    <div class="col">
        <a class="btn btn-primary btn-sm active" href="/details/{{_id}}"><span>🔍︎</span></a>
        <form action="/delete/{{_id}}" method="post">
            <button class="btn btn-danger btn-sm active" type="submit">🗙</button>
        </form>
    </div>
</div>
<hr>
{{/each}}

<p class="text-center"><a class="btn btn-success btn-sm active" href="/create">Create new Listing</a></p>