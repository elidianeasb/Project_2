<div class="container">
    <div class="row">
        {{#each jobs}}
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <div class="col">
                    <p class="joblistHeader">Title</p>
                    <p class="joblistContent">{{title}}</p>
                </div>
                <div class="col">
                    <p class="joblistHeader">Company</p>
                    <p class="joblistContent">{{company}}</p>
                </div>
                <div class="col">
                    <p class="joblistHeader">Status</p>
                    <p class="joblistContent">{{status}}</p>
                </div>
                <div class="col">
                    <div class="card-bottom">
                    <a href="/details/{{_id}}"><span>More</span></a>
                    <form action="/delete/{{_id}}" method="post">
                        <button class="btn-delete" type="submit">üóë</button>
                    </form>                    
                </div>


                </div>
                
            </div>
        </div>
        {{/each}}
